<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7adfb8"
    tools:context=".activity.PasswordChangeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#33cc99">
    <TextView
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置新密码"
        android:gravity="center"
        android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/radius_drawable_bg">
    <EditText
        android:id="@+id/oldpassword"
        android:layout_width="0dp"
        android:layout_weight="14"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:hint="旧密码"
        android:textSize="16sp" />
        <ImageView
            android:id="@+id/delete6"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chahao5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/radius_drawable_bg">
    <EditText
        android:id="@+id/newpassword"
        android:layout_width="0dp"
        android:layout_weight="14"
        android:layout_height="50dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:hint="新密码"
        android:inputType="textPassword"
        android:textSize="16sp" />
        <ImageView
            android:id="@+id/disply1"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/yincang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/radius_drawable_bg">
    <EditText
        android:id="@+id/newpassword2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="14"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textSize="16sp" />
        <ImageView
            android:id="@+id/disply2"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/yincang"/>
    </LinearLayout>
    <Button
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/affirm"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/round_blue2"
        android:textSize="40sp"/>
</LinearLayout>