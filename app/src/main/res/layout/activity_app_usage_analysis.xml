<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AppUsageAnalysisActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textSize="20dp"
        android:text="过去一天app的使用情况统计" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/btn_app_usage_collect_service_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启动AppUsage信息收集"
            android:background="@drawable/selector_blue"/>
        <Button
            android:id="@+id/btn_app_usage_collect_service_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关闭AppUsage信息收集"
            android:layout_marginLeft="30dp"
            android:background="@drawable/selector_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="APP名称" />

        <TextView
            android:id="@+id/txt_first_runtime"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="第一次启动时间" />

        <TextView
            android:id="@+id/txt_last_runtime"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="最后一次启动时间" />

        <TextView
            android:id="@+id/txt_total_runtime"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="App总运行时间" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
